<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mismascotas.DetalleMascota">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include android:id="@+id/materialToolbar"
            layout="@layout/actionbar"></include>

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/top"
            android:text="@string/name"
            android:textSize="33sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/textPhone"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="@dimen/top"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_phone"
            android:drawablePadding="10sp"
            android:text="@string/phone"
            android:textSize="20sp"
            android:onClick="llamar"
            tools:ignore="UsingOnClickInXml"
            />


        <TextView
            android:id="@+id/textEmail"
            android:layout_margin="@dimen/top"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="0sp"
            android:padding="0sp"
            android:gravity="center_vertical"
            app:drawableStartCompat="@drawable/ic_mail"
            android:drawablePadding="10sp"
            android:text="@string/email"
            android:textSize="16sp"
            android:onClick="enviarMail"
            tools:ignore="UsingOnClickInXml"
            />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>